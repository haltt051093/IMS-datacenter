@model IMS.Models.RackOfCustomerIndexViewModel
@{
    ViewBag.Title = "Rack Of Customer Page";
    ViewBag.Role = "Shift Head";
}

<section class="content-header">
    <h1>
        List of Rack Of Customer
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index2", "Schedule")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">IP Address</li>
    </ol>
</section>
<section class="content">

    @using (Html.BeginForm("Index", "Rack", FormMethod.Get))
    {

       
            <h4>Search By</h4>
            <div class="form-inline">
                <div class="form-group"><label>Customer: </label></div>
                <div class="form-group">
                    @Html.DropDownList("CustomerSearch", "--Select--")
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary pull-left" value="Search" />
                </div>
                <div class="form-group col-sm-offset-1"><label>Rack Name: </label></div>
                <div class="form-group">
                    @Html.DropDownList("RackSearch", "--Select--")
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary pull-left" value="Search" />
                </div>
            </div>
          
    }

</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Rack Name</th>
                        <th>Customer</th>
                        <th>Rack Unit</th>
                        <th>Location Code</th>
                        <th>Server Code</th>
                        <th>RackUnit Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Racks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RackName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RackUnit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocationCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServerCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusName)
                            </td>


                        </tr>
                                        }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Rack Name</th>
                        <th>Customer</th>
                        <th>Rack Unit</th>
                        <th>Location Code</th>
                        <th>Server Code</th>
                        <th>RackUnit Status</th>

                    </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->

</section><!-- /.content -->

<script type="text/javascript">
    $(function() {
        $('#example1').dataTable({
            "bPaginate": true,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,

        });
    });
</script>