@model ServerIndexViewModel

@{
    ViewBag.Title = "ServerPage";
    ViewBag.Role = "Shift Head";
}
<section class="content-header">
    <h1>
        List of Server
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index2", "Schedule")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Server</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-body table-responsive">
            <div class="box-body table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Server Code</th>
                            <th>Customer</th>
                            <th>Status</th>
                            <th>Default IP</th>
                            <th>Location</th>
                            <th>Current Request</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Servers)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("ServerDetails", "Server", new { id = @item.Id })">@item.ServerCode</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DefaultIP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RackName)U
                                    @Html.DisplayFor(modelItem => item.RackUnit)
                                </td>
                                <td class="sidebar-menu">
                                    @if (item.Requests.Count > 0)
                                    {
                                        foreach (var request in item.Requests)
                                        {
                                            <ul><a href="#"><i class="fa fa-angle-double-right"></i> @request.RequestTypeName</a></ul>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Server Code</th>
                            <th>Customer</th>
                            <th>Status</th>
                            <th>Default IP</th>
                            <th>Location</th>
                            <th>Current Request</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</section>
