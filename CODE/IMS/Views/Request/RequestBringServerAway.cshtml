@model RequestBringServerAwayViewModel
@{
    ViewBag.Title = "RequestBringAwayServer2";
    ViewBag.Role = "Customer";
}

<section class="content-header">
    <h1>
        Request Bring Away Server
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("RequestHistory", "Request")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Request Bring Away Server</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-body table-responsive">

            <div class="form-horizontal">
                @using (Html.BeginForm("RequestAssignIp", "Request", FormMethod.Post))
                {
                    <div class="form-group">
                        <label class="col-sm-4 control-label">The number of your server in data center</label>
                        <div class="col-sm-1">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Select by rented rack</label>
                        <div class="col-sm-1">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Which server do you want to bring away?</label>
                        <div class="col-sm-1">
                            <div>
                                <table id="masterTable" class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="checkAll" />Check all
                                            </th>
                                            <th>
                                                ServerCode
                                            </th>
                                            <th>
                                                Default IP
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            <div>
                                <table id="detailTable" class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="checkAll" />check all
                                            </th>
                                            <th>
                                                @Html.Raw("Select IPs")
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <input type="checkbox" name="192.168.1.1" /><text>S232432</text>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Description</label>
                        <div class="col-sm-2">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "width: 500px; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" ,placeholder = "Some description here", rows = "6" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-2">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </div>
                }
            </div>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section>
