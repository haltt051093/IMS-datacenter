@model RequestIPViewModel
@{
    ViewBag.Title = "RequestReturnIP2";
    ViewBag.Role = "Customer";
}

<section class="content-header">
    <h1>
        Request Return IP Address
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("RequestHistory2", "Request")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Request Return IP Address</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-body table-responsive">
            @using (Html.BeginForm("RequestReturnIp", "Request", FormMethod.Post))
            {
                <div class="form-group">
                    <label class="col-sm-4 control-label">Which server do you want return IP?</label>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.SelectedServer, Model.Servers, new { @id = "servercode" })
                    </div>
                </div>
                <div class="form-group">
                    <div id="divPartialView" class="hidden">
                        <label class="col-sm-4 control-label">Which IP do you want to return?</label>
                        <div class="col-sm-2 col-sm-offset-4">
                            <table id="MyTable" class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.Raw("IP")
                                        </th>
                                        <th>
                                            @Html.Raw("Select IPs")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                            @Html.HiddenFor(model => model.Ips, new { id = "ips" })
                            @Html.HiddenFor(model => model.SelectedServer)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Note</label>
                    <div class="col-sm-2">
                        <textarea style="width: 500px; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" class="form-control" placeholder="Some description here"></textarea>
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "width: 500px; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;", placeholder = "Some description here" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-2">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            }
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section>
<script type="text/javascript">
    $(function () {
        $('#servercode').change(function () {
            var pass = $('#servercode').val();
            var myTable = $('#MyTable > tbody');
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.Action("FetchIPs", "Request"))",
                data: { "SelectedServerCode": pass },
                dataType: "json",
                success: function (data) {
                    $('#divPartialView').removeClass('hidden');
                    $(data.ServerIPs).each(function (index, item) {
                        //myTable.append($('tr', { value: item.ServerCode, text: item.ServerCode }));
                        myTable.append('<tr><td>' + item.CurrentIP + '</td><td>' + '<input type="checkbox" id="CheckBoxList"'
                            + index + ' name="chk" value="' + item.CurrentIP + '" /></td></tr>');
                    });
                }
            });
        });

        //Get value of selected items
        $("#demo").click(function () {
            var selectedValues = [];
            $("[id*=MyTable] input:checked").each(function () {
                selectedValues.push($(this).val());
            });
            if (selectedValues.length > 0) {
                alert("Selected Value(s): " + selectedValues);
            } else {
                alert("No item has been selected.");
            }
            $('#ips').val(selectedValues);
        });
    });

</script>