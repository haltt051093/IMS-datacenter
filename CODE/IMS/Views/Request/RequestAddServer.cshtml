<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker(
       {
           "disabledHours": [0, 1, 2, 3, 4, 5, 6, 7, 21, 22, 23, 24],
           "enabledHours": [8, 9, 10, 12, 12, 14, 15, 16, 17, 18, 19, 20],
           "stepping": '30',
           "minDate": 'moment'
       });
    });
</script>
