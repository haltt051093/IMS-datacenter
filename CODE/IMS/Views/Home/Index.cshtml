@model HomeIndexViewModel
@{
    ViewBag.Title = Pages.HomeIndex;
    ViewBag.PageTitle = Pages.HomeIndex;
    ViewBag.Role = "Shift Head";
    ViewBag.Breadcrumbs = new List<BreadcrumbModel>
    {
        new BreadcrumbModel("Home", "Index", Pages.Home)
    };
}

<div class="main-content">
    <h2>@Messages.Welcome</h2>
    <a class="@Constants.HtmlFormat.PRIMARY_BUTTON_CLASS pull-left"
       data-toggle="modal" data-target="#displayrequesttype-modal">
        <i class="fa fa-plus"></i> @Labels.CreateRequest
    </a>
</div>


<!-- ADD LOCATION MODAL -->
<div id="displayrequesttype-modal" class="@Constants.HtmlFormat.MODAL_CLASS" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateRequest", "Request", FormMethod.Get))
            {
                <div class="modal-header">
                    <div class="@Constants.HtmlFormat.MODAL_HEADER_CLASS"><i class="fa fa-plus"></i> @Labels.CreateRequest</div>
                </div>
                <div class="modal-body">
                    <div class="@Constants.HtmlFormat.FORM_ROW_CLASS">
                        <div class="@Constants.HtmlFormat.FORM_LABEL_CLASS">
                            @Html.LabelFor(model => model.Type):
                        </div>
                        <div class="@Constants.HtmlFormat.FORM_CONTROL_CLASS">
                            @Html.DropDownListFor(model => model.Type, Model.RequestTypes, new { @class = Constants.HtmlFormat.FORM_INNER_CLASS })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" name="@Constants.FormAction.ACTION_NAME" value="@Constants.FormAction.CANCEL_ACTION" class="@Constants.HtmlFormat.DEFAULT_BUTTON_CLASS"
                            data-dismiss="modal">
                        @Labels.DialogCancel
                    </button>
                    <button type="submit" name="@Constants.FormAction.ACTION_NAME" value="@Constants.FormAction.OK_ACTION" class="@Constants.HtmlFormat.PRIMARY_BUTTON_CLASS">
                        @Labels.DialogOK
                    </button>
                </div>
            }
        </div>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- page script -->
