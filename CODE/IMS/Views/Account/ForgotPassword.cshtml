@model ForgotPasswordViewModel
@{
    ViewBag.Title = Pages.ForgotPassword;
    ViewBag.PageTitle = Pages.ForgotPassword;
    ViewBag.Breadcrumbs = new List<BreadcrumbModel>
    {
        new BreadcrumbModel("Home", "Index", Pages.Home),
        new BreadcrumbModel("Account", "ForgotPassword", Pages.ForgotPassword)
    };
}
@using (Html.BeginForm("PostForgotPassword", "Account", FormMethod.Post))
{
    <section class="main-content">

        <div class="form-group">

            @Html.LabelFor(model => model.Email)
          
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style="width: 600px" } })
                @Html.ValidationMessageFor(model => model.Email)
      
        </div>

        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-primary pull-left"/>
            @Html.ActionLink("Cancel", "Login", "Account", htmlAttributes: new { @class = "btn btn-default pull-left" })
        </div>
    </section>
}