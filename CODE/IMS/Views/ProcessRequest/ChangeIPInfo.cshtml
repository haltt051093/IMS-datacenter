@model RequestIPViewModel
@{
    ViewBag.Title = "RequestChangeIPInfo2";
    ViewBag.Role = "Shift Head";
}

<section class="content-header">
    <h1>
        Detail Request Change IP Address
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index2", "Schedule")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Detail Request Change IP Address</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-body table-responsive">
            @using (Html.BeginForm("ProcessRequestChangeIp", "ProcessRequest", FormMethod.Post))
            {
                <dl class="dl-horizontal">
                    <dt>
                        From customer
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Customer, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>
                    <dt>
                        Full Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>
                    <dt>
                        Requested Time
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.RequestedTime, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>
                    <dt>
                        Request Status
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StatusName, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>

                    <dt>
                        Selected server
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SelectedServer, new {htmlAttributes = new {@class = "form-control"}})
                    </dd>
                    @if (Model.CountAvailableIps < Model.NumberOfIP)
                    {
                        ViewBag.Message = "Khong du so luong IP cap phat";
                    }
                    <dt>
                        Selected IP of Server
                    </dt>

                    <dd style="color: #f56954">
                        <div class="form-group">
                            @for (int i = 0; i < Model.ReturningIps.Count; i++)
                            {
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => Model.ReturningIps[i])
                                    @Html.HiddenFor(model => model.ReturningIps[i])
                                    <div class="selectedIP">
                                        @Html.DropDownListFor(model => model.SelectedIps, Model.IpSelectListItems)
                                    </div>
                                </div>
                            }

                        </div>
                    </dd>

                    <dt>
                        Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>
                    @Html.HiddenFor(model => model.Ips, new { id = "ips" })
                    @Html.HiddenFor(x => x.RequestCode)
                    @Html.HiddenFor(x => x.Customer)
                    @Html.HiddenFor(x => x.RequestType)
                    @Html.HiddenFor(x => x.SelectedServer)
                    @Html.HiddenFor(x => x.NumberOfIP, new { @ip = "IpNumber" })
                    @if (Model.StatusCode == Constants.StatusCode.REQUEST_WAITING || Model.StatusCode == Constants.StatusCode.REQUEST_PROCESSING)
                    {
                        <dd>
                            <button type="submit" class="btn btn-primary" id="btnApprove">Approve</button>
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </dd>
                    }
                </dl>
            }
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section>
