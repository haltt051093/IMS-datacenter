@model AspNetAjaxFormModel

@{
    Layout = Constants.HtmlLayout.BOOTSTRAP;
    ViewBag.Title = Pages.AspNetAjaxForm;
    ViewBag.PageTitle = Pages.AspNet;
}

@using (Ajax.BeginForm(new AjaxOptions() { OnComplete = "complete" }))
{
    <div class="@Constants.HtmlFormat.FORM_ROW_CLASS">
        <div class="@Constants.HtmlFormat.FORM_LABEL_CLASS">
            @Html.LabelFor(x => x.Name)
        </div>
        <div class="@Constants.HtmlFormat.FORM_CONTROL_CLASS">
            @Html.TextBoxFor(x => x.Name, new {@class = Constants.HtmlFormat.MODAL_INNER_CLASS})
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="@Constants.HtmlFormat.FORM_ROW_CLASS">
        <div class="@Constants.HtmlFormat.FORM_LABEL_CLASS">
        </div>
        <div class="@Constants.HtmlFormat.FORM_CONTROL_CLASS">
            <button name="@TFAspNetConstants.FormAction.BUTTON_NAME" value="@TFAspNetConstants.FormAction.OK" class="@Constants.HtmlFormat.PRIMARY_BUTTON_CLASS">
                @Labels.OK
            </button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render(TFAspNetConstants.ScriptBundle.JQUERY_VALIDATE)
    @Scripts.Render(TFAspNetConstants.ScriptBundle.ASPNETMVC)
    <script type="text/javascript">
        function complete(response) {
            alert('Done ;)');
        }
    </script>
}

@section Styles {
    @Styles.Render(TFAspNetConstants.StyleBundle.JQUERY_VALIDATE)
    @*<style></style>*@
}
